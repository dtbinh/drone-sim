{
  "template": "small",
  "world": {
    "chunkEdgeLengthMeters": 50,
    "snapshots": {
      "snapshotWritePeriodSeconds": 0
    },
    "dimensions": {
      "xMeters": 2000,
      "zMeters": 2000
    }
  },
  "workers": [
    {
      "worker_type": "UnityWorker",
      "load_balancing": {
        "static_hex_grid": {
          "worker_radius_meters": 300.0,
          "grid_width": 4,
          "grid_height": 4
        }
      },
      "permissions": [{
        "entity_creation": {
          "allow": true
        },
        "entity_deletion": {
          "allow": true
        },
        "entity_query": {
          "allow": true,
          "components": [
            "*"
          ]
        }
      }]
    },
    {
      "worker_type": "UnityClient",
      "permissions": [{
        "entity_creation": {
          "allow": false
        },
        "entity_deletion": {
          "allow": false
        },
        "entity_query": {
          "allow": true,
          "components": []
        }
      }]
    }
  ]
}
